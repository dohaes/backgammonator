<project name="Backgammonator Project" default="all" basedir=".">
	<description>
        simple example build file
    </description>
	<!-- set global properties for this build -->
	<property name="project.home" location="../" />
	<property name="src" location="${project.home}/src" />
	<property name="build" location="${project.home}/classes" />

	<target name="all" depends="lib, demo, distSysLib" />
	<target name="lib" depends="distLib" />
	<target name="demo" depends="distDemo" />
	<target name="syslib" depends="distSysLib" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />

		<copy todir="${build}">
			<fileset dir="../" includes="sample/**/*" />
		</copy>

	</target>

	<target name="compile" depends="init" description="compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" />
	</target>

	<target name="distLib" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${project.home}/lib" />

		<jar jarfile="${project.home}/lib/backgammonLibrary.jar" basedir="${build}" excludes="backgammonator/impl/protocol/*
							backgammonator/impl/game/Main.class" includes="backgammonator/**
			sample/backgammonator/sample/players/interfacce/**" />
	</target>

	<target name="distDemo" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${project.home}/lib" />

		<jar jarfile="${project.home}/lib/backgammonDemo.jar" basedir="${build}" manifest="../src/meta-inf/manifest.mf" includes="backgammonator/**
								sample/backgammonator/sample/player/protocol/**" />
	</target>

	<target name="distSysLib" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${project.home}/lib" />

		<jar jarfile="${project.home}/lib/backgammonSysLib.jar" basedir="${build}" includes="
		  backgammonator/lib/tournament/*
      backgammonator/lib/game/*
      backgammonator/lib/logger/*
			backgammonator/util/*" />
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} directory trees -->
		<delete dir="${build}" />
	</target>
</project>